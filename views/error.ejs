<!-- Página de Error -->
<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Error del Sistema
                </h4>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <i class="bi bi-bug text-danger" style="font-size: 4rem;"></i>
                </div>
                
                <h5 class="text-danger mb-3">
                    <%= error || 'Ha ocurrido un error inesperado' %>
                </h5>
                
                <p class="text-muted mb-4">
                    El sistema ha encontrado un problema. Por favor, intente nuevamente o contacte al administrador.
                </p>
                
                <div class="d-grid gap-2 d-md-block">
                    <button class="btn btn-outline-secondary me-md-2" onclick="history.back()">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </button>
                    <a href="/" class="btn btn-success">
                        <i class="bi bi-house-door me-1"></i>Ir al Inicio
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Información adicional para desarrolladores -->
        <% if (process.env.NODE_ENV === 'development') { %>
        <div class="card mt-3 border-warning">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0">
                    <i class="bi bi-code-slash me-2"></i>
                    Información para Desarrolladores
                </h6>
            </div>
            <div class="card-body text-start">
                <small class="text-muted">
                    <strong>Timestamp:</strong> <%= new Date().toISOString() %><br>
                    <strong>URL:</strong> <%= req?.url || 'N/A' %><br>
                    <strong>Método:</strong> <%= req?.method || 'N/A' %><br>
                    <strong>User Agent:</strong> <%= req?.headers?.['user-agent'] || 'N/A' %>
                </small>
            </div>
        </div>
        <% } %>
    </div>
</div> 