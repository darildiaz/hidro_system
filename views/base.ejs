<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Sistema de Hidroponía</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-droplet-fill me-2"></i>
                Sistema de Hidroponía
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/programacion">
                            <i class="bi bi-clock me-1"></i>Programación
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/condiciones">
                            <i class="bi bi-thermometer-half me-1"></i>Condiciones
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/monitoreo">
                            <i class="bi bi-graph-up me-1"></i>Monitoreo
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/configuracion">
                            <i class="bi bi-gear me-1"></i>Configuración
                        </a>
                    </li>
                </ul>
                
                <!-- Estado del sistema -->
                <div class="navbar-nav">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-circle-fill text-success me-1"></i>
                            Sistema Online
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#" id="systemStatus">
                                <i class="bi bi-info-circle me-2"></i>Estado del Sistema
                            </a></li>
                            <li><a class="dropdown-item" href="#" id="createBackup">
                                <i class="bi bi-download me-2"></i>Crear Respaldo
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#" id="restartSystem">
                                <i class="bi bi-arrow-clockwise me-2"></i>Reiniciar Sistema
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main class="container-fluid py-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                <% if (typeof breadcrumb !== 'undefined' && breadcrumb) { %>
                    <% breadcrumb.forEach(item => { %>
                        <li class="breadcrumb-item <%= item.active ? 'active' : '' %>" 
                            <%= item.active ? 'aria-current="page"' : '' %>>
                            <%= item.active ? item.text : `<a href="${item.link}">${item.text}</a>` %>
                        </li>
                    <% }); %>
                <% } %>
            </ol>
        </nav>

        <!-- Contenido de la página -->
        <%- body %>

        <!-- Footer -->
        <footer class="mt-5 py-4 text-center text-muted border-top">
            <div class="container">
                <p class="mb-0">
                    <i class="bi bi-droplet-fill text-success me-1"></i>
                    Sistema de Hidroponía Automatizado - Ing. Daril Díaz © 2024
                </p>
                <small class="text-muted">
                    Desarrollado con Node.js, Express y Raspberry Pi
                </small>
            </div>
        </footer>
    </main>

    <!-- Modal de confirmación -->
    <div class="modal fade" id="confirmModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Acción</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="confirmMessage">¿Está seguro de que desea realizar esta acción?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-success" id="confirmAction">Confirmar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast de notificaciones -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="notificationToast" class="toast" role="alert">
            <div class="toast-header">
                <i class="bi bi-info-circle text-primary me-2"></i>
                <strong class="me-auto">Notificación</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body" id="toastMessage">
                Mensaje de notificación
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    
    <!-- Scripts específicos de la página -->
    <% if (typeof pageScripts !== 'undefined' && pageScripts) { %>
        <% pageScripts.forEach(script => { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
</body>
</html> 