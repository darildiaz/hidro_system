    "moment": "^2.29.4",
    "rpio": "^2.4.2",
    "shelljs": "^0.8.5",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
