  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "dev-relaxed": "node app.development.js",
    "dev-ip": "HOST=192.168.1.39 PORT=3000 node app.development.js",
    "dev-local": "HOST=localhost PORT=3000 node app.development.js",
